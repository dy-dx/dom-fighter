{
    "compilerOptions": {
        "allowJs": true,
        "sourceMap": true,
        "target": "es2018",
        "outDir": "./dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true
    },
    "files": [
        "node_modules/peerjs/dist/peer.js"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
